{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "vscode": [
                "__mocks__/vscode.ts"
            ]
        },
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "tests/**/*.ts",
        "__mocks__/**/*.ts"
    ]
}
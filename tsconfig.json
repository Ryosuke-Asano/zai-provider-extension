{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "out",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "__mocks__",
    ".vscode-test",
    "tests"
  ]
}